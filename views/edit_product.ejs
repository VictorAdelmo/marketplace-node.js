<!DOCTYPE html>
<html lang="pt">

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <link rel="stylesheet" href="/add_product/add_product.css"/>
        <link rel="icon" type="image/png" href="/logo_imgs/vgp_logo.png"/>
        <link rel="stylesheet" href="/side_bar/side_bar_style.css"/>

        <title>Editar Produto | Marketplace</title>
    </head>

    <%- include ("nav_bar") -%>

    <body>
        <div class="wrapper">
            <div class="sidebar">
                <h2>Ações</h2>
                <ul>
                    <li><a href="/vendedor/informacoes"><i class="fas fa-home"></i>Informações</a></li>
                    <li><a href="/vendedor/meus-produtos"><i class="fas fa-home"></i>Meus Produtos</a></li>
                    <li><a href="/vendedor/adicionar"><i class="fas fa-user"></i>Adicionar Produto</a></li>
                    <li><a href="/vendedor/vendas"><i class="fas fa-project-diagram"></i>Vendas</a></li>
                    <li><a href="#"><i class="fas fa-map-pin"></i>Avaliações</a></li>
                    <li><a href="/perfil/informacoes-perfil"><i class="fas fa-map-pin"></i>Perfil</a></li>
                </ul>
            </div>
        </div>

        <div class="container">
            <div class="send">
                <% produtoData.forEach(element => { %>
                <form action="/atualizar-produto/<%=element.id%>" method="POST">

                    <label>Nome<label style="color:#2fa796">*</label></label>
                    <br>
                    <input required="" class="send-name" name="nome" max="25" value="<%=element.nome%>" type="text" placeholder="Name">
                    <br>
                    <label>Descrição<label style="color:#2fa796">*</label></label>
                    <br>
                    <input required="" class="description" max="350" name="descricao" type="text" placeholder="Description" value="<%=element.descricao%>">
                    <br>
                    <label>Descrição Curta:</label>
                    <br>
                    <input class="send-name" name="descricao_curta" type="text" max="50" placeholder="Short Description" value="<%=element.descricao_curta%>">
                    <br>
                    <label>Categorie<label style="color:#2fa796">*</label></label>
                    <select class="categorie" name="categoria">
                        <option>roupas</option>
                        <option>joias</option>
                        <option>bones</option>
                        <option>acessorios</option>
                        <option>tenis</option>
                    </select>
                    <br>
                    <label>Produto Status<label style="color:#2fa796">*</label></label>
                    <select class="categorie" name="status">
                        <option selected="run">Ativo</option>
                        <option>Pausado</option>
                    </select>
                    <br>
                    <label>Preço(R$)<label style="color:#2fa796">*</label></label>
                    <br>
                    <input required="" class="price" name="preco" type="number" min="0" max="10000" value="<%=element.preco%>" step="any" placeholder="Price (U$D)">
                    <br>

                    <label>Quantidade<label style="color:#2fa796">*</label></label>
                    <br>                    
                    <input class="price" required=""  name="quantidade" type="number" placeholder="Quantity" value="<%=element.quantidade%>"><br><br>

                    <br>
                    <br>

                    <button class="btn-send-form" type="submit">Editar Produto</button>
                    <%});%>
                </form>              
            </div>
        </div>
    </body>
</html>
